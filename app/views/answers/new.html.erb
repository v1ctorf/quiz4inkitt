<h1>quiz - answer here!</h1>

<%= form_for :answer, url: answers_path do |f| %>
   <% if @answer.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@answer.errors.count, "error") %> prohibited
        this answer from being saved:
      </h2>
      <ul>
        <% @answer.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <p><%= @question["question"] %></p>

  <ol>
    <% @question["options"].each_with_index do |opt, val| %>
      <li>
        <%= f.radio_button(:option, val) %>
        <%= f.label(:option_a, opt) %>
      </li>
    <% end %>
  </ol>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>