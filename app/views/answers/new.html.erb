<%= form_for :answer, url: answers_path do |f| %>
<div class="row"> 
  <div class="col-md-offset-3 col-md-6">
    <h1>Quiz - Question</h1>
      <h3><%= @question["question"] %></h3>
    
      <ul class="list-group">
        <% @question["options"].each_with_index do |opt, val| %>
          <li class="list-group-item">
            <%= f.radio_button(:option, val) %>
            <%= f.label(:option_a, opt) %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <%= f.submit "Next Question", :class => "btn btn-primary pull-right" %>
    </div>
  </div>
<% end %>
